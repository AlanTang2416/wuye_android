<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/one_ll"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_detail_icon_order"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_10">

            <TextView
                android:id="@+id/order_detail_one_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="订单编号："/>

            <TextView
                android:id="@+id/order_detail_orderid_tx"
                android:layout_toRightOf="@+id/order_detail_one_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#70B4DA"/>

            <TextView
                android:id="@+id/order_detail_two_tx"
                android:layout_below="@+id/order_detail_one_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="订单状态："/>

            <TextView
                android:id="@+id/order_detail_state_tx"
                android:layout_toRightOf="@+id/order_detail_one_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:layout_below="@+id/order_detail_one_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1818E0"/>

            <TextView
                android:id="@+id/order_detail_three_tx"
                android:layout_below="@+id/order_detail_two_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="订单时间："/>

            <TextView
                android:id="@+id/order_detail_time_tx"
                android:layout_toRightOf="@+id/order_detail_one_tx"
                android:layout_below="@+id/order_detail_two_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_ll"
        android:layout_below="@+id/one_ll"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_detail_icon_user"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_10">

            <TextView
                android:id="@+id/order_detail_four_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="收货人："/>

            <TextView
                android:id="@+id/order_detail_name_tx"
                android:layout_toRightOf="@+id/order_detail_four_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"/>

            <TextView
                android:id="@+id/order_detail_five_tx"
                android:layout_below="@+id/order_detail_name_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="联系手机："/>

            <TextView
                android:id="@+id/order_detail_phone_tx"
                android:layout_toRightOf="@+id/order_detail_five_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:layout_below="@+id/order_detail_name_tx"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"/>

            <TextView
                android:id="@+id/order_detail_six_tx"
                android:layout_below="@+id/order_detail_five_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"
                android:text="收货地址："/>

            <TextView
                android:id="@+id/order_detail_address_tx"
                android:layout_toRightOf="@+id/order_detail_six_tx"
                android:layout_below="@+id/order_detail_five_tx"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5D5D5D"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/three_rl"
        android:layout_below="@+id/two_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_70"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:clickable="true"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/order_detail_head_iv"
            android:layout_width="@dimen/dimen_dp_65"
            android:layout_height="@dimen/dimen_dp_65"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/orderdetail_title_tx"
            android:layout_toRightOf="@+id/order_detail_head_iv"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/dimen_sp_16"
            android:textColor="#616164"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/order_detail_head_iv"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_price_tx"
                android:layout_width="@dimen/dimen_dp_120"
                android:textSize="@dimen/dimen_sp_14"
                android:layout_height="wrap_content"
                android:text="单价："/>
            <TextView
                android:id="@+id/order_detail_num_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_sp_14"
                android:text="数量："/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/line_iv"
        android:layout_below="@+id/three_rl"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <LinearLayout
        android:layout_below="@+id/line_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_totalprice_tx"
            android:textSize="@dimen/dimen_sp_14"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textColor="#DC44A0"
            android:text="总金额："/>
    </LinearLayout>

    <Button
        android:id="@+id/order_detail_bt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_dp_40"
        android:layout_marginRight="@dimen/dimen_dp_40"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:text="联系客服"
        android:textSize="@dimen/dimen_sp_13"
        android:textColor="#50D173"
        android:background="@drawable/bt_orderlist_selector"/>
</RelativeLayout>